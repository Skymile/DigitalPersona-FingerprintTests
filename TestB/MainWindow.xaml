<Window x:Class="TestB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestB"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Image x:Name="WindowImage" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
		<Button x:Name="WindowButtonCapture" Content="Capture" HorizontalAlignment="Left" Height="30" Margin="399,10,0,0" VerticalAlignment="Top" Width="79" Click="WindowButtonCapture_Click"/>
		<Button x:Name="WindowButtonBinarize" Content="Binarize" HorizontalAlignment="Left" Height="30" Margin="399,45,0,0" VerticalAlignment="Top" Width="79" Click="WindowButtonBinarize_Click"/>
		<Button x:Name="WindowButtonRefresh" Content="Refresh" HorizontalAlignment="Left" Height="30" Margin="399,80,0,0" VerticalAlignment="Top" Width="79" Click="WindowButtonRefresh_Click"/>
	</Grid>
</Window>
