<Window x:Class="FDB.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FDB.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
		<TextBox x:Name="WindowBoxLoginUsername" HorizontalAlignment="Left" Height="24" Margin="73,80,0,0"  TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="150"/>
		<TextBox x:Name="WindowBoxLoginPassword" HorizontalAlignment="Left" Height="24" Margin="73,225,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="150"/>
		<Button x:Name="WindowButtonLogin" Content="Login" HorizontalAlignment="Left" Height="24" Margin="112,182,0,0" VerticalAlignment="Top" Width="64" Click="WindowButtonLogin_Click"/>
		<Button x:Name="WindowButtonCapture" Content="Capture fingerprint" HorizontalAlignment="Left" Margin="81,128,0,0" VerticalAlignment="Top" Width="134" Height="24" Click="WindowButtonCapture_Click"/>
	</Grid>
</Window>
