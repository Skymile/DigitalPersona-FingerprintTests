<UserControl x:Class="FDB.View.BlueButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FDB.View"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Grid>
        <Button x:Name="ThisButton" Content="Button" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="290" BorderBrush="#FF71E5FF">
            <Button.Background>
                <LinearGradientBrush EndPoint="1.006,0.476" StartPoint="0.021,0.48">
                    <GradientStop Color="#FF0046FF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF00F3FF" Offset="0.996"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
